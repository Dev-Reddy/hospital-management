package com.capgemini.hmsbackend.config;

import com.github.benmanes.caffeine.cache.Caffeine;
import org.springframework.cache.CacheManager;
import org.springframework.cache.caffeine.CaffeineCacheManager;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

import java.util.concurrent.TimeUnit;

@Configuration
public class CacheConfig {

    @Bean
    public CacheManager cacheManager() {
        CaffeineCacheManager cacheManager = new CaffeineCacheManager(

                "procedures", "procedureByCode", "physicianCount",
                "appointments", "appointmentDates", "appointmentRoom",
                "appointmentsByNurse", "nurseDetails", "patientsByNurse",
                "physicianByNurseDate", "roomsByNurseDate", "isPhysicianHead", "departmentsByHead","allDepartments","departments","insuranceByPatient",  "patients","physicians","physiciansByPosition","physiciansByProcedure","allProcedures"
        );
        cacheManager.setCaffeine(Caffeine.newBuilder()
                .expireAfterWrite(10, TimeUnit.MINUTES)
                .maximumSize(500));
        return cacheManager;
    }
}
